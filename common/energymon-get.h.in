/**
 * Utility for getting an energymon implementation defined at compile time.
 *
 * @author Connor Imes
 * @date 2020-02-02
 */
#ifndef _ENERGYMON_GET_H_
#define _ENERGYMON_GET_H_

#ifdef __cplusplus
extern "C" {
#endif

#include <stdio.h>
#include "energymon.h"
#include "@ENERGYMON_GET_HEADER@"

#pragma GCC visibility push(hidden)

static int energymon_get(energymon* em) {
  int rc = @ENERGYMON_GET_FUNCTION@(em);
  if (rc) {
    perror("@ENERGYMON_GET_FUNCTION@");
  }
  return rc;
}

#pragma GCC visibility pop

#ifdef __cplusplus
}
#endif

#endif
